@model QuizApp.Models.Quiz
@*Details page*@
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@*A description list with all the details and the correct answer*@
@*Buttons for Edit and to go Back to List*@
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorrectAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorrectAnswer)
