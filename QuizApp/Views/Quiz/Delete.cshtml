@model QuizApp.Models.Quiz
@*Delete page*@
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Quiz section?</h3>
@*A description list with all the details before deleting 
and a button to go Back to List*@
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorrectAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorrectAnswer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
